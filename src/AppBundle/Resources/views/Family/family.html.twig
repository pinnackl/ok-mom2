{% extends "::base.html.twig" %}
{% set active_page = "family" %}

{% block title %}OK Mom - Family{% endblock %}

{% block unbody %}

    <div class="row">
        <div class="col s12 m4 white family-info">
            <div class="main-container">
                <div class="name-row">Family name : {{family.name}}</div>
                <div class="name-row">Family member : {{familyMember|length}}</div>
            </div>
        </div>
        <div class="col s12 m8 family-members">
            <div class="main-container">
                <h2>Family members :</h2>
                {% for member in familyMember %}
                    <div class="col s12 m7">
                        <div class="card horizontal">
                            <div class="card-image">
                                <img src="{{member.getWebProfilePicturePath}}">
                            </div>
                            <div class="card-stacked">
                                <div class="card-content">
                                    <span class="card-title">{{member.username}}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                <form action="{{inviteAction}}" method="post" class="row">
                    <div class="input-field col s12">
                        <input id="email" type="email" name="email">
                        <label for="email">Enter an email adress</label>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <button type="submit" id="task_save" name="task[save]" class="col m3 s12 btn btn-large waves-effect">Add</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>


{% endblock %}
