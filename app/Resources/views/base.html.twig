<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>

        <!--Let browser know website is optimized for mobile-->
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        {% block stylesheets %}
            <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
            <link rel="stylesheet" type="text/css"
                href="{{ asset('assets/vendor/materialize/dist/css/materialize.min.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block menu %}
            <div class="navbar-fixed">
                <nav>
                    <div class="nav-wrapper">
                        <a href="{{url('homepage')}}" class="brand-logo">Logo</a>
                        <a href="{{url('homepage')}}" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
                        <ul class="right hide-on-med-and-down">
                            {% if app.user %}
                                <li><a href="{{url('homepage')}}logout">SIGN OUT</a></li>
                            {% else %}
                                <li><a href="{{url('homepage')}}login">LOGIN</a></li>
                                <li><a href="{{url('homepage')}}register">SIGNUP</a></li>
                            {% endif %}
                        </ul>
                        <ul class="side-nav" id="mobile-demo">
                            {% if app.user %}
                                <li><a href="{{url('homepage')}}logout">SIGN OUT</a></li>
                            {% else %}
                                <li><a href="{{url('homepage')}}login">LOGIN</a></li>
                                <li><a href="{{url('homepage')}}register">SIGNUP</a></li>
                            {% endif %}
                        </ul>
                    </div>
                </nav>
            </div>
        {% endblock %}

        {% block body %}
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('assets/vendor/jquery/dist/jquery.min.js') }}"></script>
            <script src="{{ asset('assets/vendor/materialize/dist/js/materialize.min.js') }}"></script>
            <script>
            $(document).ready(function () {
                // $(".button-collapse").sideNav();
            });
            </script>
        {% endblock %}
    </body>
</html>
