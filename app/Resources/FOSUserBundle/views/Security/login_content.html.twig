{% block content %}
    {% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="container form col s12">
    <div class="row">
        <div style="text-align:center">
        <img class="logo" src="/images/pinnackl.svg" alt="Pinnackl">
        </div>
        <h1>Log in your OK Mom account</h1>
    </div>
    <div class="z-depth-1 grey lighten-4 row content">
        <form class="col s12" action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}

            <div class='row'>
                <div class='input-field col s12'>
                    <input class='validate' type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                    <label for="username">{{ 'security.login.username'|trans }}</label>
                </div>
            </div>

            <div class='row'>
                <div class='input-field col s12'>
                    <input class='validate' type="password" id="password" name="_password" required="required" />
                    <label for="password">{{ 'security.login.password'|trans }}</label>
                </div>
            </div>

            <div class='row'>
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>

            <div class='row'>
                <input class='col s12 btn btn-large waves-effect' type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
            </div>
            <div class="row">
                <a href="{{url('homepage')}}resetting/request" title="Forgot password?">Forgot password?</a>
            </div>
        </form>
    </div>
    <div class="row">
        <a class="row" href="{{url('homepage')}}register" title="Create account">Create account</a>
    </div>   
</div>
{% endblock %}